<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize">

            <ImageView
                android:id="@+id/food_details_backbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                app:srcCompat="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lato_regular"
                android:text="@string/details"
                android:textColor="@color/colorblack"
                android:textSize="18sp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/dividergradient" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:hint="Name"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="20"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorblack"
                android:textColorHint="@color/hintcolor"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/food_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/price"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="10"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorblack"
                android:textColorHint="@color/hintcolor"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/food_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/description"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="4"
                android:padding="10dp"
                android:textColor="@color/colorblack"
                android:textColorHint="@color/hintcolor"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/food_delivery_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_back_drop"
                android:editable="false"
                android:fontFamily="@font/lato_regular"
                android:hint="@string/time_for_food_delievery"
                android:imeOptions="actionNext"
                android:inputType="none"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/colorblack"
                android:textColorHint="@color/hintcolor"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingTop="20dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/food_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:editable="false"
                    android:fontFamily="@font/lato_regular"
                    android:hint="@string/location"
                    android:imeOptions="actionDone"
                    android:background="@null"
                    android:inputType="none"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorblack"
                    android:textColorHint="@color/hintcolor"
                    android:textSize="16sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_location_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_location"
                android:drawablePadding="4dp"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_vertical"
                android:hint="@string/set_current_location"
                android:paddingTop="30dp"
                android:paddingRight="20dp"
                android:textColorHint="@color/hintcolor"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/profilehintcolor" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/photo"
            android:textColor="@color/colorlightblue"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/upload_food_images"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/dotted_border_bg"
                    android:padding="20dp"
                    app:srcCompat="@drawable/ic_upload_pic" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/lato_regular"
                    android:gravity="center"
                    android:text="@string/add_image"
                    android:textColor="@color/profilehintcolor"
                    android:textSize="11sp" />
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/food_images_container_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/profilehintcolor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/visibility"
            android:textColor="@color/colorlightblue"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/foodPost_visibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/food_visibility_everyone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Everyone"
                android:textColor="@color/hintcolor"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/food_visibility_followers_only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Followers Only"
                android:textColor="@color/hintcolor"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/lato_regular"
            android:text="@string/account_Visibility"
            android:textColor="@color/hintcolor"
            android:textSize="11sp" />

        <Button
            android:id="@+id/food_post_btn"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_margin="20dp"
            android:background="@drawable/createbtn_back"
            android:text="@string/post"
            android:textColor="@color/colorwhite"
            android:textSize="17sp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
