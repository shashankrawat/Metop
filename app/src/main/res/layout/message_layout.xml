<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="24dp"
    android:background="@color/layoutbacklight"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorwhite"
        android:gravity="center"
        android:text="@string/messages"
        android:textColor="@color/colorblack"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/msgicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_msg_illustration" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/msgicon"
        android:textColor="@color/profilehintcolor"
        android:textSize="16sp"
        android:text="@string/dont_have_msg"/>
</RelativeLayout>