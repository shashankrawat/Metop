<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginTop="6dp"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/imageView_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/advertisement_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/advertisement_post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView_bg"
            android:layout_gravity="bottom|end"
            android:padding="10dp"
            android:text="22 mint ago"
            android:textColor="@color/colorwhite"
            android:textSize="10sp" />

    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_post_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_bg"
        android:background="@drawable/advertisementbtnback"
        android:fontFamily="@font/lato_regular"
        android:padding="4dp"
        android:text="@string/advertisement"
        android:textColor="@color/colorwhite"
        android:textSize="9sp" />


    <TextView
        android:id="@+id/tv_totalviews"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView_bg"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/tv_post_type"
        android:drawableLeft="@drawable/ic_viewews"
        android:drawablePadding="2dp"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_comments"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView_bg"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/tv_totalviews"
        android:drawableLeft="@drawable/ic_conversation"
        android:drawablePadding="2dp"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/advertisement_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_post_type"
        android:fontFamily="@font/lato_regular"
        android:textSize="12sp" />

</RelativeLayout>
