<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="vertical"
    android:paddingLeft="25dp"
    android:paddingTop="25dp"
    android:paddingRight="25dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomtv"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/ic_logo_login"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lato_bold"
            android:text="@string/welcome"
            android:textColor="@color/colorblack"
            android:textSize="35sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_create_account"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/createbtn_back"
                android:fontFamily="@font/lato_regular"
                android:text="@string/create_an_account"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/loginbtn_back"
                android:fontFamily="@font/lato_regular"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lato_regular"
                android:text="@string/or_use"
                android:textColor="@color/hintcolor"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/icon_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/shadow"
                android:padding="13dp"
                android:src="@drawable/icon_fb"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/icon_google"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow"
                android:padding="13dp"
                android:src="@drawable/ic_google"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/icon_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:background="@drawable/shadow"
                android:padding="12dp"
                android:src="@drawable/icon_twitter"
                tools:ignore="VectorDrawableCompat" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bottomtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottonlay"
        android:fontFamily="@font/lato_regular"
        android:text="@string/by_creating_account_and_log_in_you_are_agree_our"
        android:textAlignment="center"
        android:textColor="@color/hintcolor"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/bottonlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="@string/privacy_policy"
            android:textColor="@color/colorlightblue"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/or"
            android:textColor="@color/hintcolor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_term_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:text="@string/terms_and_conditions"
            android:textColor="@color/colorlightblue"
            android:textSize="12sp" />
    </LinearLayout>


</RelativeLayout>