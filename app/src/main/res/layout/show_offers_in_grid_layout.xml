<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="vertical"
    android:paddingTop="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="9">

        <EditText
            android:id="@+id/ed_search_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@drawable/edittextback"
            android:drawableRight="@drawable/icon_search"
            android:fontFamily="@font/lato_regular"
            android:hint="@string/what_you_are_looking_for"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingRight="10dp" />

        <ImageView
            android:id="@+id/icon_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:padding="10dp"
            app:srcCompat="@drawable/icon_filter" />

        <ImageView
            android:id="@+id/icon_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:padding="10dp"
            app:srcCompat="@drawable/icon_map" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/offers_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="6dp">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
